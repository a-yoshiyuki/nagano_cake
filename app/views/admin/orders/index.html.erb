<h1>注文履歴一覧</h1>
<table class="table table-striped">
	<thead>
    <tr>
      <th></th>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>

  <tbody>
  	<% @orders.each do |f| %>
  		<tr>
  			<td></td>
  			<td>
  				<%= f.id %>
  			</td>
  			<td>
  				<%= link_to admin_order_path(f) do %>
  					<%= f.name %>
  				<% end %>
  			</td>
  			<td>
  				<%= f.price %>
  			</td>
  		</tr>
		<% end %>
		<%= paginate @orders %>
  </tbody>

</table>