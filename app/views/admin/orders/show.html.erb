<div class="container">
  <div class="row">
		<div class="col-xs-10">
      <h2>注文履歴詳細</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <table>
        <tr>
          <th>
            購入者
          </th>
          <td>
            <%= @order.customer.full_name %>
          </td>
        </tr>
        <tr>
          <th>
            注文日
          </th>
          <td>
            <%= @order.created_at %>
          </td>
        </tr>
        <tr>
          <th>
            配送先
          </th>
          <td>
            <%= @order.customer.address %>
          </td>
        </tr>
        <tr>
          <th>
            支払方法
          </th>
          <td>
            <%= @order.payment %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-7">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @order.order_items.each do |order_item| %>
            <tr>
              <td>
                <%= order_item.item.name %>
              </td>
              <td>
                <%= order_item.item.syouhizei.to_s(:delimited) %>
              </td>
              <td>
                <%= order_item.quantity %>
              </td>
              <td>
                <%= order_item.syoukei.to_s(:delimited) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-5">
      <table>
        <tr>
          <th>
            商品合計
          </th>
          <td>
            ￥<%= @order_item_price.to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <th>
            送料
          </th>
          <td>
            ￥800
          </td>
        </tr>
        <tr>
          <th>
            請求金額合計
          </th>
          <td>
            ￥<%= @total_price.to_s(:delimited) %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>