<div class="container-fluid">
  <div class="row">
		<div class="col-xs-10 col-xs-offset-2">
      <h1>商品詳細</h1>
      <table>
        <%= attachment_image_tag @item, :image, :fill, 100, 100, class: "pull-left" %>
        <tbody>
          <tr>
            <th>
              商品名
            </th>
            <th>
              <%= @item.name %>
            </th>
          </tr>

          <tr>
            <td>
              商品説明
            </td>
            <td>
              <%= @item.introduction %>
            </td>
          </tr>
          <tr>
            <td>
              税込価格
              <br>
              （税込み価格）
            </td>
            <td>
              <%= @item.price %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
