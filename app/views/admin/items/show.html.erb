<div class="container">
  <div class="row">
		<div class="col-xs-10 col-xs-offset-2">
      <h1>商品詳細</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= attachment_image_tag @item, :image, size: "100x100", fallback: "no_image.jpg" %>
    </div>
    <div class="col-xs-9">
      <table>
        <tr>
          <th>
            商品名
          </th>
          <th>
            <%= @item.name %>
          </th>
        </tr>
        <tr>
          <td>
            商品説明
          </td>
          <td>
            <%= @item.introduction %>
          </td>
        </tr>
        <tr>
          <td>
            税込価格
            <br>
            （税抜価格）
          </td>
          <td>
            <%= @item.price %>
          </td>
        </tr>
        <div class="row">
		      <div class="col-xs-3"></div>
		      <div class="col-xs-4 col-xs-offset-1">
		        <%= link_to "編集する", edit_admin_item_path(@item) %>
		      </div>
		      <div class="col-xs-3 col-xs-offset-1"></div>
		  </table>
		</div>
  </div>
</div>