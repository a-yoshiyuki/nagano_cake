<div class="container-fluid">
  <div class="row">
		<div class="col-xs-10 col-xs-offset-2">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "customers/shared/error_messages", resource: resource %>
                <table>
                  <tr>
                    <th><%= f.label :名前 %></th>
                      <td>（姓）<%= f.text_field :first_name, autofocus: true %></td>
                      <td>（名）<%= f.text_field :last_name, autofocus: true %></td>
                  </tr>
                  <tr>
                    <th><%= f.label :フリガナ %></th>
                    <td>（セイ）<%= f.text_field :first_name_kana, autofocus: true %></td>
                    <td>（メイ）<%= f.text_field :last_name_kana, autofocus: true %></td>
                  </tr>

                  <tr>
                    <th><%= f.label :メールアドレス %></th>
                    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                  </tr>

                  <tr>
                    <th><%= f.label :郵便番号（ハイフンなし） %></th>
                    <td><%= f.text_field :postal_code, autofocus: true %></td>
                  </tr>

                  <tr>
                    <th><%= f.label :住所 %></th>
                    <td><%= f.text_field :address, autofocus: true %></td>
                  </tr>

                  <tr>
                    <th><%= f.label :電話番号（ハイフンなし） %></td>
                    <td><%= f.text_field :telephone_number, autofocus: true %></td>
                  </tr>

                  <tr>
                    <th><%= f.label :パスワード %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> 文字以上)</em>
                      <% end %>
                    </th>
                    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
                  </tr>

                  <tr>
                    <th><%= f.label :パスワード（確認用） %></th>
                    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
                  </tr>
                </table>
                  <%= f.submit "新規登録", class:"btn btn-primary col-xs-4" %>
            <% end %>
    </div>
  </div>

<div class="container-fluid">
  <div class="row">
		<div class="col-xs-10 col-xs-offset-2">
      <h2>すでに登録済の方</h2>
    </div>
  </div>
  <div class="row">
		<div class="col-xs-3"></div>
		<div class="col-xs-9 ">
		  <%= link_to "こちら", new_customer_session_path %>
      からログインしてください。
		</div>
	</div>

