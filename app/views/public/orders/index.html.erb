<div class="container">
  <div class="row">
		<div class="col-xs-10 col-xs-offset-2">
      <h2>注文履歴一覧</h2>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
  	<div class="col-xs-1"></div>
		<div class="col-xs-10">
		  <table class="table table-bordered">
		    <tbody>
  			　<tr>
  				<th>注文日</th>
  				<th>配送先</th>
  				<th>注文商品</th>
  				<th>支払金額</th>
  				<th>注文詳細</th>
  			  </tr>
			　<% @orders.each do |order| %>
      			  <tr>
      				<td>
      					<%= order.created_at %>
      				</td>
      				<td>
      					<%= current_customer.address %>
      				</td>
      				<td>
      					<%= order.name %>
      				</td>
      				<td>
      					<%= order.billing_amount %>
      				</td>
      				<td>
      					<%= link_to "表示する", public_order_path(order) %>
      				</td>
      			　</tr>
        <% end %>
		    </tbody>
		  </table>
		</div>
	</div>
</div>