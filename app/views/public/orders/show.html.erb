<div class="container">
  <div class="row">
	<div class="col-xs-10 col-xs-offset-2">
      <h2>注文履歴詳細</h2>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-5">
        <table class="table table-bordered">
          注文情報
          <tbody>
            <tr>
              <th>
                注文日
              </th>
              <td>
                <%= @order.created_at %>
              </td>
            </tr>
            <tr>
              <th>
                配送先
              </th>
              <td>
                <%= current_customer.address %>
              </td>
            </tr>
            <tr>
              <th>
                支払方法
              </th>
              <td>
                <%= @order.payment %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
    <div class="col-xs-3">
      <table class="table table-bordered">
        請求情報
        <tbody>
          <tr>
            <th>
              商品合計
            </th>
            <td>

            </td>
          </tr>
          <tr>
            <th>
              送料
            </th>
            <td>
              ￥800
            </td>
          </tr>
          <tr>
            <th>
              ご請求金額
            </th>
            <td>
              ￥<%= @order.billing_amount %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>