    <div class="col-xs-3">
      <%= attachment_image_tag @item, :image, :fill, 250, 200 %>
    </div>
    <div class="col-xs-9">
      <table>
        <tr>
          <th>
            <div class= "item_name">
              <%= @item.name %>
            </div>
          </th>
        </tr>
        <tr>
          <td>
            <%= @item.introduction %>
          </td>
        </tr>
        <tr>
          <td>
            <div class= "item_price">
              ￥<%= @item.price %>（税込）
            </div>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

