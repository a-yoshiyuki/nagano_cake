<div class="container-fluid">
  <div class="row">
	<div class="col-xs-10 col-xs-offset-2">
      <h3>会員情報編集</h3>
    </div>
  </div>
  <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
    <div class="row">
      <div class="col-xs-3"></div>
		  <div class="col-xs-4 col-xs-offset-1"></div>
      <div class="col-xs-3 col-xs-offset-1"></div>
    </div>

    <div class="row">
      <div class="col-xs-3">
        <h5>氏名</h5>
      </div>
		  <div class="col-xs-4 col-xs-offset-1">
        <%= f.text_field :first_name %>
      </div>
      <div class="col-xs-3 col-xs-offset-1">
          <%= f.text_field :last_name %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-3">
        <h5>フリガナ</h5>
      </div>
		  <div class="col-xs-4 col-xs-offset-1">
        <%= f.text_field :first_name_kana %>
      </div>
      <div class="col-xs-3 col-xs-offset-1">
        <%= f.text_field :last_name_kana %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-3">
        <h5>郵便番号</h5>
      </div>
		  <div class="col-xs-4 col-xs-offset-1">
        <%= f.text_field :postal_code %>
      </div>
      <div class="col-xs-3 col-xs-offset-1"></div>
    </div>

    <div class="row">
      <div class="col-xs-3">
        <h5>住所</h5>
      </div>
		  <div class="col-xs-4 col-xs-offset-1">
        <%= f.text_field :address %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-3">
        <h5>電話番号</h5>
      </div>
		  <div class="col-xs-4 col-xs-offset-1">
        <%= f.text_field :telephone_number %>
      </div>
      <div class="col-xs-3 col-xs-offset-1"></div>
    </div>

    <div class="row">
      <div class="col-xs-3">
        <h5>メールアドレス</h5>
      </div>
		  <div class="col-xs-4 col-xs-offset-1">
        <%= f.text_field :email %>
      </div>
      <div class="col-xs-3 col-xs-offset-1"></div>
    </div>

    <div class="row">
      <div class="col-xs-3"></div>
		    <div class="col-xs-4 col-xs-offset-1">
          <%= f.submit "編集内容を保存", class:"btn btn-primary col-xs-12" %>
        </div>
        <div class="col-xs-3 col-xs-offset-1"></div>
    </div>
  <% end %>
</div>